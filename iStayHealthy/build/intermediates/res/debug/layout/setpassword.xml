<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:padding="6dip">
	<TableLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="1">
	    <TableRow 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">	    
	    	<ImageButton android:id="@+id/DoneButton"
		        android:contentDescription="@string/button"		        
		    	android:background="@null"
		   		android:src="@drawable/back"
			    android:layout_marginLeft="6dip"
			   	android:layout_marginTop="6dip"
			   	android:layout_marginBottom="5dip"
		   		android:layout_width="wrap_content"    
		    	android:layout_height="wrap_content"
		    	/>
	    	<TextView android:id="@+id/PasswordTitle"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:textSize="15sp"
		        android:textStyle="bold"
		        android:layout_marginLeft="0dip"
		        android:layout_marginRight="0dip"
				android:layout_gravity="center_vertical|center_horizontal"		
		        android:layout_marginTop="6dip"
		        android:layout_marginBottom="5dip"
				android:maxLines="2" 
				android:ellipsize="marquee" 
				android:singleLine="false" 
		    	android:text="@string/Password"/>
		    <ImageView 
		        android:contentDescription="@string/view"		        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/empty"
		        android:maxHeight="2dip"
		        android:minHeight="2dip"/>   	    
	    	</TableRow>
    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
		    <ImageView 
		        android:contentDescription="@string/view"		        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="3"
		        android:background="@color/darkgray"
		        android:maxHeight="2dip"
		        android:minHeight="2dip"/>   	    
    	</TableRow>
    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
    			<TextView 
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
			        android:layout_marginTop="10dip"
			        android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"            
		    		android:textSize="15dip"
		    		android:textStyle="bold"
		    		android:textColor="@color/textcolour"
		    		android:text="@string/UsePassword"/>
	    	   	<CheckBox 
	    	   	    android:id="@+id/PasswordCheckbox"
	    	   	    android:layout_width="wrap_content"
	    	   	    android:layout_height="wrap_content"
			      	android:layout_marginTop="10dip"
			      	android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"/>    	    			    	    
		    	<ImageView 
		        android:contentDescription="@string/view"		        
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/empty"
			        android:maxHeight="2dip"
			        android:minHeight="2dip"/>   	    
	    	</TableRow>
    		<TableRow 
    		    android:id="@+id/firstPasswordRow"
    		 	android:layout_width="fill_parent"
    			android:layout_height="wrap_content">
    			<TextView 
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
			        android:layout_marginTop="2dip"
			        android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"            
		    		android:textSize="15dip"
		    		android:textStyle="bold"
		    		android:textColor="@color/textcolour"
		    		android:text="@string/PasswordText"/>
    			<EditText 
    				android:id="@+id/FirstPasswordEntry"
    				android:inputType="textPassword"
					android:layout_marginLeft="6dip"            
			        android:layout_marginTop="5dip"
			        android:layout_marginBottom="5dip"
					android:layout_marginRight="6dip"            
		    		android:textSize="15dip"
		    		android:layout_width="wrap_content"    
		    		android:layout_height="wrap_content"/>
		    	<ImageView 
		        android:contentDescription="@string/view"		        
		    	    android:id="@+id/firstCheckImage"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/empty"
			        android:maxHeight="2dip"
			        android:minHeight="2dip"/>   	    
    		</TableRow>
    		
    		<TableRow 
    		    android:id="@+id/secondPasswordRow"
    		 	android:layout_width="fill_parent"
    			android:layout_height="wrap_content">
    			<TextView 
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
			        android:layout_marginTop="2dip"
			        android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"            
		    		android:textSize="15dip"
		    		android:textStyle="bold"
		    		android:textColor="@color/textcolour"
		    		android:text="@string/Confirm"/>
    			<EditText 
    				android:id="@+id/SecondPasswordEntry"
    				android:inputType="textPassword"
					android:layout_marginLeft="6dip"            
			        android:layout_marginTop="5dip"
			        android:layout_marginBottom="5dip"
					android:layout_marginRight="6dip"            
		    		android:textSize="15dip"
		    		android:layout_width="wrap_content"    
		    		android:layout_height="wrap_content"/>
		    	<ImageView 
		        android:contentDescription="@string/view"		        
		    	    android:id="@+id/secondCheckImage"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/empty"
			        android:maxHeight="2dip"
			        android:minHeight="2dip"/>   	    
    	</TableRow>
    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
		    <TextView 
		        android:id="@+id/passwordFeedback"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dip"
		        android:layout_marginBottom="1dip"
				android:layout_marginLeft="6dip"            
	    		android:textSize="15dip"
	    		android:textStyle="bold"
		    	android:textColor="@color/darkred"
		        android:layout_span="2"/>
		</TableRow>    						
    		
    </TableLayout>
   	<Button android:id="@+id/setPasswordButton"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="1dip"
        android:layout_marginLeft="6dip"    		
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="@string/SavePassword"
        android:textColor="@color/chartbackground"
        android:background="@drawable/custom_button"/>				    	    
	

</LinearLayout><!-- From: file:/Users/piddie/AndroidstudioProjects/iStayHealthy/iStayHealthy/src/main/res/layout/setpassword.xml -->