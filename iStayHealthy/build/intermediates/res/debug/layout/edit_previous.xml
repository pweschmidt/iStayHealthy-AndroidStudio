<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/subtitlebar"/>
    
    <TableLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:stretchColumns="1">

    	<TableRow 		
    	    android:id="@+id/startDateRow"	
			android:background="@android:drawable/list_selector_background"    	    
			android:layout_width="fill_parent"	
			android:layout_height="wrap_content">
		<ImageView android:id="@+id/dateSelectImage"
		  android:contentDescription="@string/view"		        
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="13dip"
				   	android:layout_marginBottom="3dip"
	      android:layout_gravity="center_vertical|center_horizontal"		
	      android:background="@drawable/appointments"
		  android:focusableInTouchMode="false"
		  android:focusable="false"/>   
		<TextView android:id="@+id/selectedDateView"
		  android:focusableInTouchMode="false"
		  android:focusable="false"	  
		  android:gravity="left"
	      android:textSize="15sp"			   
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="13dip"
				   	android:layout_marginBottom="3dip"
		  android:layout_width="wrap_content"
	      android:layout_height="wrap_content"/>
		<ImageView 
		  android:contentDescription="@string/view"		        
		  android:paddingRight="6dip"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_gravity="center_vertical|center_horizontal"		
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="13dip"
				   	android:layout_marginBottom="3dip"
		  android:focusableInTouchMode="false"
		  android:focusable="false"
		  android:src="@drawable/nextitem"/>    				
    	</TableRow>

    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
		    <ImageView 
		        android:contentDescription="@string/view"		        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="3"
		        android:background="@color/darkgray"
		        android:maxHeight="2dip"
		        android:minHeight="2dip"/>   	    
    	</TableRow>
    		
    		    	    
    	<TableRow 		
    	    android:id="@+id/endDateRow"	
			android:background="@android:drawable/list_selector_background"    	    
			android:layout_width="fill_parent"	
			android:layout_height="wrap_content">
		<ImageView android:id="@+id/endDateSelectImage"
		  android:contentDescription="@string/view"		        
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
	      android:layout_gravity="center_vertical|center_horizontal"		
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="3dip"
				   	android:layout_marginBottom="3dip"
	      android:background="@drawable/stop"
		  android:focusableInTouchMode="false"
		  android:focusable="false"/>   
		<TextView android:id="@+id/selectedEndDateView"
		  android:focusableInTouchMode="false"
		  android:focusable="false"	  
		  android:gravity="left"
	      android:textSize="15sp"			   
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="3dip"
				   	android:layout_marginBottom="3dip"
		  android:layout_width="wrap_content"
	      android:layout_height="wrap_content"/>
		<ImageView 
		  android:contentDescription="@string/view"		        
		  android:paddingRight="6dip"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_gravity="center_vertical|center_horizontal"		
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="3dip"
				   	android:layout_marginBottom="3dip"
		  android:focusableInTouchMode="false"
		  android:focusable="false"
		  android:src="@drawable/nextitem"/>    				
    	</TableRow>
    		    
    		    	
    </TableLayout>
    
</LinearLayout><!-- From: file:/Users/piddie/AndroidstudioProjects/iStayHealthy/iStayHealthy/src/main/res/layout/edit_previous.xml -->