<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/subtitlebar"/>
    <include layout="@layout/dateheaderview"/>
    <RadioGroup 
        android:id="@+id/seriousnessGroup"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RadioButton 
            android:id="@+id/seriousChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/Serious"/>    
        <RadioButton 
            android:id="@+id/majorChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/Major"/>    
        <RadioButton 
            android:id="@+id/minorChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/Minor"/>    
    </RadioGroup>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="6dip"
	    android:layout_marginTop="10dip"
	    android:text="@string/editSideEffect"
	    android:textSize="12sp"
	    />
	<EditText 
	    android:id="@+id/enterSideEffect"
	    android:gravity="left|top"
	    android:layout_width="fill_parent"
	    android:layout_height="100dip"
	    android:layout_marginLeft="6dip"
	    android:layout_marginRight="6dip"
	    android:layout_marginTop="3dip"
	    android:textSize="12sp"
	    android:inputType="textMultiLine"
	    />
	<Button
	    android:id="@+id/effectsSelector"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="6dip"
	    android:layout_marginTop="6dip"
	    android:text="@string/effectList"
	    android:textSize="12sp"
	    />
	
    <TableLayout 
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
    	android:stretchColumns="1">
    	<TableRow 
    	    android:id="@+id/glossaryRow"
    	    android:layout_marginTop="6dip"
    	    android:layout_marginBottom="6dip"
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
    		<ImageView
		        android:contentDescription="@string/view"
    		    android:paddingLeft="6dip"
	  			android:focusableInTouchMode="false"
	 			android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
    		    android:src="@drawable/about"   
    		    android:layout_gravity="center_vertical|left"	    
    		/>
    		<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
    		    android:layout_gravity="center_vertical|left"	    
	  			android:focusableInTouchMode="false"
	 			android:focusable="false"
			    android:layout_marginLeft="0dip"
			    android:layout_marginRight="0dip"
				android:maxLines="2" 
				android:ellipsize="marquee" 
				android:singleLine="false" 
                android:textColor="@color/textcolour"   
				android:textStyle="bold"
			    android:textSize="15sp"
			    android:text="@string/info"/>   
			<ImageView 
		        android:contentDescription="@string/view"
	  			android:focusableInTouchMode="false"
	 			android:focusable="false"
			  android:paddingRight="6dip"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center_vertical|right"		
			  android:src="@drawable/nextitem"/>       			    
    	    	    
    	</TableRow>                	
    </TableLayout>
		
	
</LinearLayout><!-- From: file:/Users/piddie/AndroidstudioProjects/iStayHealthy/iStayHealthy/src/main/res/layout/add_effects.xml -->