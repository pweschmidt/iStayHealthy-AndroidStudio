<?xml version="1.0" encoding="utf-8"?>
    <TableLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"	
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:stretchColumns="*">
    	<TableRow 
    	  android:id="@+id/sideEffectsRow"
		  android:background="@android:drawable/list_selector_background"    	    
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content">
	        <ImageView 
		        android:contentDescription="@string/view"		        
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|left"		
			    android:layout_marginLeft="6dip"
			    android:layout_marginRight="6dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
			   	android:src="@drawable/sideeffects"/>
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:layout_gravity="center_vertical|left"		
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="3dip"
				   	android:layout_marginBottom="3dip"
	                android:singleLine="true"
	                android:ellipsize="marquee"	    
					android:textStyle="bold"
				    android:textColor="@color/textcolour"
				    android:textSize="12sp"				    
				    android:text="@string/SideEffects"/>    
		    <TextView 
		        android:id="@+id/numberOfSideEffects"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"		
			    android:layout_marginLeft="0dip"
			    android:layout_marginRight="0dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
                android:singleLine="true"
                android:ellipsize="marquee"	    
				android:textStyle="bold"
			    android:textSize="15sp"/>    
			<ImageView android:id="@+id/viewSideEffectsImage"
		        android:contentDescription="@string/view"		        
			  android:paddingRight="6dip"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center_vertical|left"		
			  android:focusableInTouchMode="false"
			  android:focusable="false"
			  android:src="@drawable/nextitem"/>    
		   </TableRow>
    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
		    <ImageView 
		        android:contentDescription="@string/view"		        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="4"
		        android:background="@color/darkgray"
		        android:maxHeight="2dip"
		        android:minHeight="2dip"/>   	    
    	</TableRow>
    	
    	<TableRow 
    	  android:id="@+id/missedMedsRow"
		  android:background="@android:drawable/list_selector_background"    	    
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content">
	        <ImageView 
		        android:contentDescription="@string/view"		        
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|left"		
			    android:layout_marginLeft="6dip"
			    android:layout_marginRight="6dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
			   	android:src="@drawable/missed"
	            />
    	    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|left"		
			    android:layout_marginLeft="6dip"
			    android:layout_marginRight="6dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
                android:singleLine="true"
                android:ellipsize="marquee"	    
			    android:textColor="@color/textcolour"
				android:textStyle="bold"
			    android:textSize="12sp"			    
			    android:text="@string/MissedMedications"/>    
		    <TextView 
		        android:id="@+id/numberOfMissedDates"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"		
			    android:layout_marginLeft="0dip"
			    android:layout_marginRight="0dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
                android:singleLine="true"
                android:ellipsize="marquee"	    
				android:textStyle="bold"
			    android:textSize="15sp"/>    
			<ImageView android:id="@+id/viewMissedDateImage"
		        android:contentDescription="@string/view"		        
			  android:paddingRight="6dip"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center_vertical|left"		
			  android:focusableInTouchMode="false"
			  android:focusable="false"
			  android:src="@drawable/nextitem"/>    
		   </TableRow>
    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
		    <ImageView 
		        android:contentDescription="@string/view"		        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="4"
		        android:background="@color/darkgray"
		        android:maxHeight="2dip"
		        android:minHeight="2dip"/>   	    
    	</TableRow>
    	
    	<TableRow 
    	  android:id="@+id/previousMedsRow"
		  android:background="@android:drawable/list_selector_background"    	    
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content">
	        <ImageView 
		        android:contentDescription="@string/view"		        
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|left"		
			    android:layout_marginLeft="6dip"
			    android:layout_marginRight="6dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
			   	android:src="@drawable/stop"/>
    	    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|left"		
			    android:layout_marginLeft="6dip"
			    android:layout_marginRight="6dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
                android:singleLine="true"
                android:ellipsize="marquee"	    
			    android:textColor="@color/textcolour"
				android:textStyle="bold"
			    android:textSize="12sp"			    
			    android:text="@string/PreviousMeds"/>    
		    <TextView 
		        android:id="@+id/numberOfPreviousMeds"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"		
			    android:layout_marginLeft="0dip"
			    android:layout_marginRight="0dip"
			   	android:layout_marginTop="3dip"
			   	android:layout_marginBottom="3dip"
                android:singleLine="true"
                android:ellipsize="marquee"	    
				android:textStyle="bold"
			    android:textSize="15sp"/>    
			<ImageView android:id="@+id/viewPreviousMedsImage"
		        android:contentDescription="@string/view"		        
			  android:paddingRight="6dip"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center_vertical|left"		
			  android:focusableInTouchMode="false"
			  android:focusable="false"
			  android:src="@drawable/nextitem"/>    
		   </TableRow>
    		
    	
	</TableLayout>
    

