<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:stretchColumns="1">
    	<TableRow 			
			android:layout_width="fill_parent"	
			android:layout_height="wrap_content">
		    <ImageButton android:id="@+id/BackButton"
		        android:contentDescription="@string/button"		        
		    	android:background="@null"
		   		android:src="@drawable/backselector"
			    android:layout_marginLeft="6dip"
			   	android:layout_marginTop="6dip"
			   	android:layout_marginBottom="5dip"
		   		android:layout_width="wrap_content"    
		    	android:layout_height="wrap_content"
		    	/>
		    <TextView android:id="@+id/TitleMainTitle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"		
			    android:layout_marginLeft="0dip"
			    android:layout_marginRight="0dip"
			   	android:layout_marginTop="6dip"
			   	android:layout_marginBottom="5dip"
				android:maxLines="2" 
				android:ellipsize="marquee" 
				android:singleLine="false" 
				android:textStyle="bold"
			    android:textSize="15sp"/>   		    
		    <ImageButton android:id="@+id/SaveButton"
		        android:contentDescription="@string/button"		        
			    android:layout_marginRight="6dip"
			   	android:layout_marginTop="6dip"
			   	android:layout_marginBottom="5dip"
		   		android:src="@drawable/saveselector"
		    	android:background="@null"
		   		android:layout_width="wrap_content"    
		    	android:layout_height="wrap_content"/>
		    <ImageButton android:id="@+id/TrashButton"
		        android:contentDescription="@string/button"		        
			    android:layout_marginRight="6dip"
			   	android:layout_marginTop="6dip"
			   	android:layout_marginBottom="5dip"
		   		android:src="@drawable/trashselector"
		    	android:background="@null"
		   		android:layout_width="wrap_content"    
		    	android:layout_height="wrap_content"/>
		</TableRow>
    	<View 
    	    android:background="@color/darkgray"
    	    android:layout_height="2dp"
    	    android:paddingLeft="6dp"
    	    android:paddingRight="6dp"/>
</TableLayout><!-- From: file:/Users/piddie/AndroidstudioProjects/iStayHealthy/iStayHealthy/src/main/res/layout/edittitlebar.xml -->