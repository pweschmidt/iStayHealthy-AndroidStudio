			   	android:layout_marginBottom="5dip"
		   		android:src="@drawable/banner"
		    	android:background="@null"
		   		android:layout_width="wrap_content"    
		    	android:layout_height="wrap_content"/>
	    </TableRow>
	</TableLayout>
	
			<TextView 
