<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/maintitlebar"/>
			<TextView 
			    android:layout_height="wrap_content"
			    android:layout_width = "fill_parent"
			    android:layout_gravity="center_vertical|center_horizontal"
			    android:layout_marginTop="0dip"
			    android:layout_marginBottom="10dip"
			    android:textColor="@color/darkgray"
			    android:text="@string/version"
			    android:textSize="12sp"
			    />
    <RadioGroup 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/resultsGroup">
        <RadioButton 
            android:id="@+id/AllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/AllResults"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
				android:maxLines="2" 
				android:ellipsize="marquee" 
				android:singleLine="false" 
            android:textSize="12sp"/>
        <RadioButton 
            android:id="@+id/HIVButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/HIVResults"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
				android:maxLines="2" 
				android:ellipsize="marquee" 
				android:singleLine="false" 
            android:textSize="12sp"/>
        <RadioButton 
            android:id="@+id/BloodButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/BloodResults"
            android:textColor="@color/darkred"
				android:maxLines="2" 
				android:ellipsize="marquee" 
				android:singleLine="false" 
            android:textStyle="bold"
            android:textSize="12sp"/>
        <RadioButton 
            android:id="@+id/OtherButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/OtherResults"
            android:textColor="@color/darkgreen"
				android:maxLines="2" 
				android:ellipsize="marquee" 
				android:singleLine="false" 
            android:textStyle="bold"
            android:textSize="12sp"/>       
    </RadioGroup>
    
    <FrameLayout 
        android:id="@+id/resultsFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
            
</LinearLayout><!-- From: file:/Users/piddie/AndroidstudioProjects/iStayHealthy/app/src/main/res/layout/resultslist.xml -->