<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:padding="6dip"
  android:stretchColumns="1"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
 <TableRow 
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
	<ImageView android:id="@+id/redCrossImage"
	  android:contentDescription="@string/view"		        
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:focusableInTouchMode="false"
	  android:focusable="false"
	  android:src="@drawable/redcrossflat"/>    
	  <TableLayout android:id="@+id/otherMedListTable"
	  android:layout_marginLeft="5dip"
	  android:layout_marginRight="5dip"
	  android:layout_marginTop="3dip"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">	  
	  	<TableRow 
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content">
		  <TextView android:id="@+id/otherMedStartDate"
	       android:focusableInTouchMode="false"
	       android:focusable="false"	  
		   android:gravity="left"
		   android:textSize="10sp"
		   android:textStyle="italic"
		   android:textColor="@color/darkdarkgray"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"/>
		</TableRow>	  	
	  	<TableRow 
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content">
		  <TextView android:id="@+id/otherMedName"
	       android:focusableInTouchMode="false"
	       android:focusable="false"	  
		   android:gravity="left"
		   android:textSize="14sp"
		   android:textStyle="bold"
		   android:textColor="@color/textcolour"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"/>
		</TableRow>	  	
	  	<TableRow 
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content">
		  <TextView android:id="@+id/otherMedDosage"
	       android:focusableInTouchMode="false"
	       android:focusable="false"	  
		   android:gravity="left"
		   android:textSize="12sp"
		   android:textColor="@color/darkred"
		   android:textStyle="bold|italic"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"/>
		</TableRow>	  	
	  </TableLayout>
	<ImageView android:id="@+id/editOtherMedImage"
	  android:contentDescription="@string/view"		        
	  android:paddingRight="6dip"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:focusableInTouchMode="false"
	  android:focusable="false"
	  android:src="@drawable/nextitem"/>    
   </TableRow>
</TableLayout>
