<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="6dip">
    <include layout="@layout/edittitlebar"/>
  	<TableLayout 
	  	android:layout_width="fill_parent"  
	  	android:layout_height="wrap_content"
	  	android:stretchColumns="1">
    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_span="3">
				<TextView 
			 		android:layout_width="fill_parent"
			 		android:layout_height="wrap_content"
			      	android:layout_marginTop="2dip"
			      	android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"            
			 		android:textSize="15sp"
			 		android:textStyle="bold"			 		
			 		android:textColor="@color/textcolour"
			 		android:text="@string/TreatmentStart"/>    	    	    
    	</TableRow>
    	<TableRow 
    	    android:id="@+id/changeTreatmentDateRow"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
	        	<ImageView 
			        android:contentDescription="@string/view"		        
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:layout_gravity="center_vertical|left"		
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="3dip"
				   	android:layout_marginBottom="3dip"
		  			android:focusableInTouchMode="false"
		 			android:focusable="false"
				   	android:src="@drawable/appointments"/>
				<TextView 
				    android:id="@+id/treatmentStartText"
			 		android:layout_width="fill_parent"
			 		android:layout_height="wrap_content"
			      	android:layout_marginTop="2dip"
			      	android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"            
		  			android:focusableInTouchMode="false"
		 			android:focusable="false"
			 		android:textSize="15sp"
			 		android:textStyle="bold"			 		
			 		android:textColor="@color/textcolour"/>	        		    	    	
				<ImageView 
				  android:contentDescription="@string/view"		        
				  android:paddingRight="6dip"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:focusableInTouchMode="false"
				  android:focusable="false"
				  android:src="@drawable/nextitem"/>    
    		</TableRow>
    		<TableRow 
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content">
			    <ImageView 
			        android:contentDescription="@string/view"		        
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_span="3"
			        android:background="@color/darkgray"
			        android:maxHeight="2dip"
			        android:minHeight="2dip"/>   	    
    		</TableRow>
    		
    	<TableRow 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_span="3">
				<TextView 
			 		android:layout_width="fill_parent"
			 		android:layout_height="wrap_content"
			      	android:layout_marginTop="2dip"
			      	android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"            
			 		android:textSize="15sp"
			 		android:textStyle="bold"			 		
			 		android:textColor="@color/textcolour"
			 		android:text="@string/TreatmentEnd"/>    	    	    
    	</TableRow>
    				
    		
    	<TableRow 
    	    android:id="@+id/endTreatmentDateRow"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
	        	<ImageView 
			        android:contentDescription="@string/view"		        
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:layout_gravity="center_vertical|left"		
				    android:layout_marginLeft="6dip"
				    android:layout_marginRight="6dip"
				   	android:layout_marginTop="3dip"
				   	android:layout_marginBottom="3dip"
		  			android:focusableInTouchMode="false"
		 			android:focusable="false"
				   	android:src="@drawable/stop"/>
				<TextView 
				    android:id="@+id/treatmentEndText"
			 		android:layout_width="fill_parent"
			 		android:layout_height="wrap_content"
			      	android:layout_marginTop="2dip"
			      	android:layout_marginBottom="1dip"
					android:layout_marginLeft="6dip"            
		  			android:focusableInTouchMode="false"
	 				android:focusable="false"
			 		android:textSize="15sp"
			 		android:textStyle="bold"			 		
			 		android:textColor="@color/textcolour"/>	        		    	    	
				<ImageView 
				  android:contentDescription="@string/view"		        
				  android:paddingRight="6dip"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:focusableInTouchMode="false"
				  android:focusable="false"
				  android:src="@drawable/nextitem"/>    
    		</TableRow>
    				    
  	</TableLayout>
</LinearLayout>
  		
